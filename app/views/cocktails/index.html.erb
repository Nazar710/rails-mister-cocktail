<div class="container">
  <h1>All cocktails you need</h1>
   <div class="row">

      <% @cocktails.each do |cocktail| %>
       <div class="col-3 cocktail-card">
        <%= link_to cocktail.name, cocktail_path(cocktail)  %>
       </div>
      <% end %>
    </div>
    <%= link_to "add a cocktail, if you need to", new_cocktail_path  %>
</div>

