<div class="cocktail-card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cocktail.photo %>')">
  <h2>
    <%= @cocktail.name %>
  </h2>
</div>


<% @cocktail.doses.each do |dose| %>
<p>
  <%= dose.description %> <%= dose.ingredient.name %>
  <%= link_to "Delete this dose", dose_path(dose),
  method: :delete,
  data: { confirm: "A you sure?"}  %>
</p>
<% end %>
<%= link_to "Back to cocktails", cocktails_path %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
